      <%= form_for(quote) do |f| %>
  <%= render "layouts/errors", object: quote %>
  <div class="field">
    <%= f.label :author, class: "label" %>
    <%= f.text_field :author, autofocus: true, class: "input" %>

    <%= f.label :text, class: "label" %>
    <%= f.text_area :text, class: "textarea" %>
  </div>
  <div class="field is-grouped is-grouped-centered">
    <p class="control">
      <%= f.submit class: "button is-primary" %>
    </p>
  </div>
<% end %>
