<div class="column is-8 is-offset-2">
  <!-- START ARTICLE -->
  <div class="card article">
    <div class="card-content">
      <p class="title article-title has-text-centered"><%= quote.text %></p>
      <div class="tags has-addons level-item">
        <span class="tag is-rounded is-info">@<%= quote.author %></span>
        <span class="tag is-rounded"><%= time_tag quote.created_at %></span>
      </div>
    </div>
  </div>
</div>
