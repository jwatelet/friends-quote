<div class="columns is-centered">
  <% if notice.present? %>
    <div class="notification column is-info is-4 is-offset-4 m-4" id="notice"><%= notice %>
    </div>
  <% end %>
  <% if alert.present? %>
    <div class="notification column is-info is-4 is-offset-4 m-4" id="alert"><%= alert %>
    </div>
  <% end %>
</div>
